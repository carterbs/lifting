{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(test(\"\\\\.(ts|tsx|js|jsx)$\"))' | xargs -I {} npx eslint --fix {}"
          }
        ]
      }
    ]
  }
}
